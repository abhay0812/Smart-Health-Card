        li.nav-item
          a.nav-link(href='/PatientRegister') Patient register
        li.nav-item
          a.nav-link(href='/dappoint') Appointments
        li.nav-item
          a.nav-link(href='/') About
        li.nav-item
          a.nav-link(href='/') Log Out
    li#usrname
      i.usericon.fa.fa-user.icon
      |#{record.name}
  br
br
br
br
.bg-agile
  .book-appointment
    h2 Doctor Details
    form(action='#' method='post')
      .left-agileits-w3layouts.same
        .gaps
          p Doctor Name
          p.det #{record.name}  
        .gaps
          p Phone Number
          p.det #{record.mobileno}
        .gaps
          p Email
          p.det #{record.email} 
        .gaps
          p Study
          p.det #{record.study} 
      .right-agileinfo.same
        .gaps
          p License Number
          p.det #{record.license_no} 
        .gaps
          p City
          p.det #{record.city}
        .gaps
          p Gender
          p.det #{record.gender}
        .gaps
          p Rating
          p.det #{record.rating}
      .clear
      // <input type="submit" value="Make an appointment">
br
br
