#getpatient.modal.fade
  .modal-dialog
    .modal-content
      form(action='/doctorgetpatient' method='post' )
        .modal-header
          h4.modal-title Enter Patient ID
          button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
        .modal-body
          .form-group
            input.form-control(type='text' name='username' required='')
        .modal-footer
          //- input.btn.btn-default(type='button' data-dismiss='modal' value='Cancel')
          input.btn.btn-success(type='submit' value='Get Details' )

