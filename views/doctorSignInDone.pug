br

.container
  .padding
    .font
      .top
        img(src=imgp)
      .bottom
        p #{record.name}
        p.desi #{record.study}
        .barcode
          img(src='../pictures/qr.png')
        br
        p.no +91 #{record.mobileno}
        //- p.no part-1,89 harinadad d...sdv..sdf..sfd..sd.
  .back
    h1.Details information
    hr.hr
    .details-info
      p
        b Email : 
      p #{record.email}
      p
        b Mobile No: 
      p #{record.mobileno}
      p
        b Clinic Address:
      p #{record.city}
